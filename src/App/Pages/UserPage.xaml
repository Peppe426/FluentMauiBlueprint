<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModels="clr-namespace:App.ViewModels"
             x:Class="App.Pages.UserPage"
             x:DataType="viewModels:UserViewModel"
             Title="User">

    <ContentPage.BindingContext>
        <viewModels:UserViewModel />
    </ContentPage.BindingContext>

    <VerticalStackLayout Padding="24" Spacing="16">
        <Grid WidthRequest="120" HeightRequest="120" HorizontalOptions="Center">
            <Image Source="{Binding Image}" Aspect="AspectFill" />
            <Grid.Clip>
                <EllipseGeometry Center="60,60" RadiusX="60" RadiusY="60" />
            </Grid.Clip>
        </Grid>
        <Label Text="{Binding UserName}" FontSize="24" HorizontalOptions="Center" />
    </VerticalStackLayout>
</ContentPage>
