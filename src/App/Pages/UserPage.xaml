<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             xmlns:viewModels="clr-namespace:App.ViewModels"
             x:Class="App.Pages.UserPage"
             x:DataType="viewModels:UserViewModel"
             Title="User">

    <ContentPage.BindingContext>
        <viewModels:UserViewModel />
    </ContentPage.BindingContext>

    <ScrollView>
        <Border Style="{StaticResource PageContainerStyle}">
        <VerticalStackLayout Spacing="16">
            <toolkit:AvatarView
                Style="{StaticResource AvatarLargeStyle}"
                ImageSource="{Binding Image}"
                Text="{Binding UserName, Converter={StaticResource InitialsConverter}}"
                HorizontalOptions="Center" />
            <Label Text="{Binding UserName}" FontSize="24" HorizontalOptions="Center" />
        </VerticalStackLayout>
        </Border>
    </ScrollView>
</ContentPage>
