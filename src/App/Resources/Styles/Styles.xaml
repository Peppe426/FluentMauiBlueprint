    <!-- Page container to constrain content width and add a subtle surface + divider -->
    <Style x:Key="PageContainerStyle" TargetType="Border">
        <Setter Property="Padding" Value="24" />
        <Setter Property="StrokeThickness" Value="1" />
    <Setter Property="Stroke"
        Value="{AppThemeBinding Light={StaticResource PageContainerStrokeBrushLight}, Dark={StaticResource PageContainerStrokeBrushDark}}" />
    <Setter Property="Background"
        Value="{AppThemeBinding Light={StaticResource PageContainerBackgroundBrushLight}, Dark={StaticResource PageContainerBackgroundBrushDark}}" />
        <Setter Property="MaximumWidthRequest" Value="1280" />
        <Setter Property="HorizontalOptions" Value="Center" />
        <Setter Property="VerticalOptions" Value="Start" />
        <Setter Property="Margin" Value="24" />
        <Setter Property="StrokeShape" Value="RoundRectangle 12" />
    <!-- Allow content to grow to available width but clamp to a max width -->
    <!-- No fixed WidthRequest: it will expand and center up to MaximumWidthRequest -->
    </Style>

