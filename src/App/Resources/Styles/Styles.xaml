    <Style x:Key="AvatarLargeStyle" TargetType="toolkit:AvatarView" BasedOn="{StaticResource AvatarBaseStyle}">
        <Setter Property="HeightRequest" Value="96" />
        <Setter Property="WidthRequest" Value="96" />
