<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:strings="clr-namespace:App.Resources.Strings"
             x:Class="App.MainPage"
             Title="{x:Static strings:LangResources.welcome}">

    <ScrollView>
        <VerticalStackLayout Padding="30" Spacing="20">
            <Label Text="{x:Static strings:LangResources.welcome}"
                   FontSize="24"
                   HorizontalOptions="Center" />

            <Label Text="{x:Static strings:LangResources.welcomeMessage}"
                   HorizontalOptions="Center"
                   HorizontalTextAlignment="Center" />

            <Button Text="{x:Static strings:LangResources.goToRegister}"
                    HorizontalOptions="Center"
                    Clicked="OnGoToRegister" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>